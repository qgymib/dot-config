# Set inner/outer gaps
gaps inner 4
gaps outer 2

# Additionally, you can issue commands with the following syntax. This is useful to bind keys to changing the gap size.
# gaps inner|outer current|all set|plus|minus <px>
# gaps inner all set 10
# gaps outer all plus 5

# Smart gaps (gaps used if only more than one container on the workspace)
smart_gaps on

# Smart borders (draw borders around container only if it is not the only container on this workspace)
# on|no_gaps (on=always activate and no_gaps=only activate if the gap size to the edge of the screen is 0)
smart_borders on

###############################################################################
### menu
###############################################################################

# menu - power
set $mode_menu_power Power (l) lock, (e) logout, (s) suspend, (h) hibernate, (R) reboot, (S) shutdown
mode "$mode_menu_power" {
    set $Locker i3lock && sleep 1

    bindsym l           exec        --no-startup-id $Locker, mode "default"
    bindsym e           exec        --no-startup-id i3-msg exit, mode "default"
    bindsym s           exec        --no-startup-id $Locker && systemctl suspend, mode "default"
    bindsym h           exec        --no-startup-id $Locker && systemctl hibernate, mode "default"
    bindsym Shift+r     exec        --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s     exec        --no-startup-id systemctl poweroff -i, mode "default"

    bindsym Escape      mode        "default"
    bindsym BackSpace   mode        "$mode_menu"
}

# resize window (you can also use the mouse for that)
set $mode_menu_window_resize resize (←) shrink width, (→) grow width, (↑) grow height, (↓) shrink height
mode "$mode_menu_window_resize" {
    bindsym Left        resize      shrink width 10 px or 10 ppt
    bindsym Up          resize      grow height 10 px or 10 ppt
    bindsym Down        resize      shrink height 10 px or 10 ppt
    bindsym Right       resize      grow width 10 px or 10 ppt

    bindsym Escape      mode        "default"
    bindsym BackSpace   mode        "$mode_menu_window"
}

# split window
set $mode_menu_window_split Split (h) horizontal, (v) vertical
mode "$mode_menu_window_split" {
    bindsym h           split       h, mode "default"
    bindsym v           split       v, mode "default"

    bindsym Escape      mode        "default"
    bindsym BackSpace   mode        "$mode_menu_window"
}

# change container layout (stacked, tabbed, splitv, splith, toggle split)
set $mode_menu_window_layout Layout (e) split toggle, (v) splitv, (h) splith, (s) stacking, (t) tabbed 
mode "$mode_menu_window_layout" {
    bindsym e           layout      toggle split, mode "default"
    bindsym v           layout      splitv, mode "default"
    bindsym h           layout      splith, mode "default"
    bindsym s           layout      stacking, mode "default"
    bindsym t           layout      tabbed, mode "default"

    bindsym Escape      mode        "default"
    bindsym BackSpace   mode        "$mode_menu_window"
}

# move focused window
set $mode_menu_window_move Move (←) left, (→) right, (↑) up, (↓) down
mode "$mode_menu_window_move" {
    bindsym Left        move        left
    bindsym Down        move        down
    bindsym Up          move        up
    bindsym Right       move        right

    bindsym Escape      mode        "default"
    bindsym BackSpace   mode        "$mode_menu_window"
}

# menu - window
set $mode_menu_window Window (c) +split, (l) +layout, (m) +move, (r) +resize, (F) toggle floating, (M) toggle mode, (S) toggle sticky
mode "$mode_menu_window" {
    bindsym c           mode        "$mode_menu_window_split"
    bindsym l           mode        "$mode_menu_window_layout"
    bindsym m           mode        "$mode_menu_window_move"
    bindsym r           mode        "$mode_menu_window_resize"
    bindsym Shift+f     floating    toggle, mode "default"
    bindsym Shift+m     focus       mode_toggle, mode "default"
    bindsym Shift+s     sticky      toggle, mode "default"

    bindsym Escape      mode        "default"
    bindsym BackSpace   mode        "$mode_menu"
}

# switch to desktop
set $mode_menu_desktop_switch Switch To Desktop (1...0)
mode "$mode_menu_desktop_switch" {
    bindsym 1           workspace   number $ws1
    bindsym 2           workspace   number $ws2
    bindsym 3           workspace   number $ws3
    bindsym 4           workspace   number $ws4
    bindsym 5           workspace   number $ws5
    bindsym 6           workspace   number $ws6
    bindsym 7           workspace   number $ws7
    bindsym 8           workspace   number $ws8
    bindsym 9           workspace   number $ws9
    bindsym 0           workspace   number $ws10

    bindsym Escape      mode        "default"
    bindsym BackSpace   mode        "$mode_menu_desktop"
}

# move focused container to workspace
set $mode_menu_desktop_move Move To Desktop (1...0)
mode "$mode_menu_desktop_move" {
    bindsym 1           move        container to workspace number $ws1, mode "default"
    bindsym 2           move        container to workspace number $ws2, mode "default"
    bindsym 3           move        container to workspace number $ws3, mode "default"
    bindsym 4           move        container to workspace number $ws4, mode "default"
    bindsym 5           move        container to workspace number $ws5, mode "default"
    bindsym 6           move        container to workspace number $ws6, mode "default"
    bindsym 7           move        container to workspace number $ws7, mode "default"
    bindsym 8           move        container to workspace number $ws8, mode "default"
    bindsym 9           move        container to workspace number $ws9, mode "default"
    bindsym 0           move        container to workspace number $ws10, mode "default"

    bindsym Escape      mode        "default"
    bindsym BackSpace   mode        "$mode_menu_desktop"
}

# menu - desktop
set $mode_menu_desktop Desktop (m) +move, (s) +switch
mode "$mode_menu_desktop" {
    bindsym m           mode        "$mode_menu_desktop_move"
    bindsym s           mode        "$mode_menu_desktop_switch"

    bindsym Escape      mode        "default"
    bindsym BackSpace   mode        "$mode_menu"
}

# menu
set $mode_menu Menu (d) +desktop, (q) close, (r) run, (s) swtich, (t) terminal, (w) +window, (Pause) +Power
mode "$mode_menu" {
    bindsym d           mode        "$mode_menu_desktop"
    bindsym q           kill        , mode "default"
    bindsym r           exec        "rofi -modi drun,run -show drun", mode "default"
    bindsym s           exec        "rofi -show window", mode "default"
    bindsym t           exec        i3-sensible-terminal, mode "default"
    bindsym w           mode        "$mode_menu_window"
    bindsym Pause       mode        "$mode_menu_power"

    bindsym Escape      mode        "default"
    bindsym BackSpace   mode        "default"
}
bindsym $mod+x          mode        "$mode_menu"

# change focus
bindsym $AltKey+Tab     focus       next
bindsym $mod+Left       focus       left
bindsym $mod+Down       focus       down
bindsym $mod+Up         focus       up
bindsym $mod+Right      focus       right

